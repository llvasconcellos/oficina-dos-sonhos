		<languages folder="admin">
			<language tag="de-DE">languages/de-DE.com_mtwmigrator.ini</language>
			<language tag="es-ES">languages/es-ES.com_mtwmigrator.ini</language>
			<language tag="pt-BR">languages/pt-BR.com_mtwmigrator.ini</language>
			<language tag="pl-PL">languages/pl-PL.com_mtwmigrator.ini</language>	
			<language tag="fr-FR">languages/fr-FR.com_mtwmigrator.ini</language>
